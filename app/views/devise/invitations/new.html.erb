<main class="content">
  <div class="container-fluid p-0">



    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">Invite a user</h5>
          </div>
          <div class="card-body">

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post , data: { turbo: false} }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% resource.class.invite_key_fields.each do |field| -%>

    <div class="mb-3">
      <%= f.label field, class: 'form-label' %>
      <%= f.text_field field, class: 'form-control' %>
    </div>
  <% end -%>

      <%= f.hidden_field :organisation_id, value: @organisation_id %>
      <%= f.hidden_field :business_unit_id, value: @business_unit_id %>
   

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
  </div>
<% end %>




          </div>
        </div>
      </div>
    </div>

  </div>
</main>
