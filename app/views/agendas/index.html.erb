



<% content_for :js do %>
  <% # disabled datatable %>
	<script>
  
  window.addEventListener('turbo:load', function() {

      if ( $.fn.dataTable.isDataTable( '#agendas-datatable' ) ) {
          table = $('#agendas-datatable').DataTable();
      }
      else {
          table = $('#agendas-datatable').DataTable( {
              responsive: true,
          } );
      }


		});
  </script>

<% end if false %>


<main class="content">
				<div class="container-fluid p-0">



				<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-header">
									<div class="card-actions float-end">
										<div class="dropdown position-relative">
	
										</div>
									</div>
									<h5 class="card-title mb-0">Agenda Items</h5>

                  <div class='display-5 mt-4'>
                  Meeting Duration: <span class='text-primary'><%= @agendas.active.map{|a| a.duration_minutes}.inject(:+) %></span> minutes
                  </div>
								</div>
								<div class="card-body">


                  <table id='agendas-datatable' class="table table-striped" style="width:100%">
                    <thead>
                      <tr>
                        
                        <th>Number</th>
                        <th>Name</th>
                        <th>Duration (minutes)</th>
                        <th data-orderable="false"></th>
              
                      </tr>
                    </thead>
                    <tbody>
                      <% @agendas.active.each do |agenda|  %>
                      <tr>
                        
                        <td><%= agenda.position %></td>
                        <td><%= agenda.name %></td>
                        <td><%= agenda.duration_minutes %></td>

                      <td class='text-end'>

                      
<div class='d-inline-flex'>
                        <%= button_to organisation_meeting_agenda_move_path(@organisation, @meeting, agenda, :up), method: :post, class: 'btn btn-warning' do  %>
                        <i class="fas fa-arrow-up"></i>
                        <% end unless agenda.first? %>
</div>
<div class='d-inline-flex'>

                        <%= button_to organisation_meeting_agenda_move_path(@organisation, @meeting, agenda, :down), method: :post, class: 'btn btn-warning' do  %>
                        <i class="fas fa-arrow-down"></i>
                        <% end unless agenda.last? %>
</div>
<div class='d-inline-flex'>

                          <%= link_to organisation_meeting_agenda_path(@organisation, @meeting, agenda) , class: 'btn btn-primary' do %>
                           View
                          <% end %>      
</div>
<div class='d-inline-flex'>

                          <%= link_to edit_organisation_meeting_agenda_path(@organisation, @meeting, agenda) , class: 'btn btn-primary' do %>
                            <i class="fas fa-edit"></i> 
                          <% end %>         
</div>
<div class='d-inline-flex'>
                          <%= button_to organisation_meeting_agenda_path(@organisation, @meeting, agenda), method: :delete, class: 'btn btn-secondary' do %>
                            <i class="fas fa-trash-alt"></i> 
                          <% end  %>                 
</div>
                        </td>
                      </tr>
                      <% end %>
                     
                    </tbody>
                  </table>

                  <div class="row mt-3">
                    <div class="col">
                      <%= link_to "New agenda item", new_organisation_meeting_agenda_path(@organisation, @meeting), class: 'btn btn-primary' %>
                    </div>
                    <div class="col text-end">
                      <%= link_to 'Back to Meeting', organisation_meeting_path(@organisation, @meeting), class: 'btn btn-secondary' %>
                    </div>
                  </div>

                </div>
							</div>
						</div>
					</div>

				</div>
			</main>